@model Entities.SinhVien

@{
    ViewBag.Title = "XoaSinhVien";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa Sinh Viên</h2>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>@Model.hoTenSinhVien</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Họ và Tên: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hoTenSinhVien)
        </dd>

        <dt>
            @Html.DisplayName("Mật khẩu: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            @Html.DisplayName("Niên khóa: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nienKhoa)
        </dd>

        <dt>
            @Html.DisplayName("Địa chỉ: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.diaChi)
        </dd>

        <dt>
            @Html.DisplayName("Số điện thoại: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soDienThoai)
        </dd>

        <dt>
            @Html.DisplayName("Email: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayName("Khoa: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.khoa)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
