@using Entities;

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/myStyle.css" rel="stylesheet" type="text/css" media="all">

    <link href="~/Content/CssAdmin/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/CssAdmin/css/style.css" rel='stylesheet' type='text/css' />

    <link rel="stylesheet" href="~/Content/CssAdmin/css/icon-font.min.css" type='text/css' />
    <link href="~/Content/CssAdmin/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/CssAdmin/css/animate.css" rel="stylesheet" type="text/css" media="all">
    <script src="~/Content/CssAdmin/js/jquery-1.10.2.min.js"></script>
</head>
<body class="sticky-header left-side-collapsed">
    <section>
        <!-- left side start-->
        <div class="left-side sticky-left-side" tabindex="5000" style="overflow: hidden; outline: none;">

            <!--logo and iconic logo start-->
            <div class="logo">
                <h1><a href="@Url.Action("Index","QuanLySinhVien")"><span>Administrtor</span></a></h1>
            </div>
            <div class="logo-icon text-center">
                <a href="@Url.Action("Index","QuanLySinhVien")"><i class="lnr lnr-home"></i> </a>
            </div>

            <!--logo and iconic logo end-->
            <div class="left-side-inner">
                <!--sidebar nav start-->
                <ul class="nav nav-pills nav-stacked custom-nav">
                    <li class="menu-list">
                        <a href="#"><i class="lnr lnr-users"></i><span>Quản Lý Sinh Viên</span></a>
                        <ul class="sub-menu-list" style="">
                            <li><a href="@Url.Action("Index","QuanLySinhVien")"><i class="lnr lnr-menu-circle"></i> Danh Sách Sinh Viên</a> </li>
                            <li><a href="@Url.Action("TaoMoiSinhVien", "QuanLySinhVien")"><i class="lnr lnr-plus-circle"></i> Thêm mới Sinh Viên</a></li>
                        </ul>
                    </li>
                    <li class="menu-list">
                        <a href="#"><i class="lnr lnr-graduation-hat"></i></i><span>Quản Lý Giảng Viên</span></a>
                        <ul class="sub-menu-list" style="">
                            <li><a href="@Url.Action("Index","QuanLyGiangVien")"><i class="lnr lnr-menu-circle"></i> Danh Sách Giảng Viên</a> </li>
                            <li><a href="@Url.Action("TaoMoiGiangVien", "QuanLyGiangVien")"><i class="lnr lnr-plus-circle"></i> Thêm mới Giảng Viên</a></li>

                        </ul>
                    </li>
                    <li class="menu-list">
                        <a href="#"><i class="lnr lnr-cog"></i><span>Quản Lý Admin</span></a>
                        <ul class="sub-menu-list" style="">
                            <li><a href="@Url.Action("Index","QuanLyAdmin")"><i class="lnr lnr-menu-circle"></i> Danh Sách Admin</a> </li>
                            <li><a href="@Url.Action("TaoMoiAdmin", "QuanLyAdmin")"><i class="lnr lnr-plus-circle"></i> Thêm mới Admin</a></li>

                        </ul>
                    </li>
                    <li class="menu-list">
                        <a href="#"><i class="lnr lnr-layers"></i></i><span>Quản Lý Đồ Án</span></a>
                        <ul class="sub-menu-list" style="">
                            <li><a href="@Url.Action("Index","QuanLyDoAn")"><i class="lnr lnr-menu-circle"></i> Danh Sách Đồ Án</a> </li>
                            <li><a href="@Url.Action("TaoMoiDoAn", "QuanLyDoAn")"><i class="lnr lnr-plus-circle"></i> Thêm mới Đồ Án</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-content">
            <div class="header-section">
                <a class="toggle-btn"><i class="fa fa-bars"></i></a>
                <div class="menu-right">
                    <div class="user-panel-top">
                        <div class="profile_details">
                            <ul>
                                <li class="dropdown profile_details_drop">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <div class="profile_img">
                                            <span style="background:url(../Content/CssAdmin/images/1.jpg) no-repeat center"> </span>
                                            <div class="user-name">
                                                @*@if (Session["user"] != null && Session["user"] != " ")
                                                {
                                                    //ThanhVien tv = (ThanhVien)Session["user"];
                                                    //<p>Xin Chào:<span>@tv.HoTen</span></p>

                                                }*@  
                                                <p>Xin Chào:<span>Toàn</span></p>
                                            </div>
                                            <i class="lnr lnr-chevron-down"></i>
                                            <i class="lnr lnr-chevron-up"></i>
                                            <div class="clearfix"></div>
                                        </div>
                                    </a>
                                    <ul class="dropdown-menu drp-mnu" style="margin:8px">
                                        <li> <a href="#"><i class="fa fa-cog"></i> Settings</a> </li>
                                        <li> <a href="#"><i class="fa fa-user"></i>Profile</a> </li>
                                        @Html.ActionLink("Logout", "Logout", "Admin", new { @class = "fa fa-sign-out" })
                                    </ul>
                                </li>
                                <div class="clearfix"> </div>
                            </ul>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                </div>
                <!--notification menu end -->
            </div>
            <!-- //header-ends -->
            <div class="container body-content">
                <br />
                @RenderBody()
            </div>
        </div>
        <!--footer section start-->
        <footer>
            <p>&copy 2016 Easy Admin Panel. All Rights Reserved | Design by W3layouts</p>
        </footer>
        <!--footer section end-->
        <!-- main content end-->
    </section>
    <script src="~/Content/CssAdmin/js/jquery.nicescroll.js"></script>
    <script src="~/Content/CssAdmin/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/CssAdmin/js/bootstrap.min.js"></script>
</body>
</html>